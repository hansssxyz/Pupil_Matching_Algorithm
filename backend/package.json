{
  "name": "backend",
  "version": "0.1.0",
  "description": "Cloud Functions for pupil-mobile",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "yarn run build && firebase emulators:start --import export",
    "serve:clean": "yarn run build && firebase emulators:start",
    "shell": "yarn run build && firebase functions:shell",
    "start": "yarn run shell",
    "deploy": "yarn pack --cwd ../shared --filename shared.tgz && yarn add ./shared.tgz && firebase deploy --only functions && rm shared.tgz && yarn add 'shared@*'",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "expo-server-sdk": "^3.7.0",
    "fast-levenshtein": "^3.0.0",
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.2.0",
    "node-fetch": "v3",
    "reflect-metadata": "^0.1.13",
    "shared": "*",
    "twitter-api-v2": "^1.14.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node-fetch": "v3",
    "firebase-functions-test": "^0.2.0",
    "typescript": "^5.1.6"
  },
  "private": true
}
